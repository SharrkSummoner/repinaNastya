<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainMenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="Категории меню"
                android:textColor="@color/main_color"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/salats"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:background="@drawable/p_cornen_radius"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:onClick="salats"
                android:text="Салаты"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/soops"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:background="@drawable/p_cornen_radius"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:onClick="sops"
                android:text="Супы"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:background="@drawable/p_cornen_radius"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:onClick="second"
                android:text="Второе блюдо"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/drinks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:background="@drawable/p_cornen_radius"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:onClick="drinks"
                android:text="Напитки"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>